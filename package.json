{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "preinstall": "node ./scripts/ensure-yarn.js",
    "clean": "yarn workspaces run clean",
    "build": "yarn workspaces run build",
    "lint": "yarn workspaces run lint",
    "check-style": "yarn workspaces run check-style",
    "check-style:fix": "yarn workspaces run check-style:fix",
    "build:dev": "tsc -b ./tsconfig.monorepo.json",
    "test": "jest",
    "dev": "node ./scripts/dev.js",
    "ci": "npm run build && npm run test",
    "prerelease": "npm run build && npm run test"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "jest-watch-typeahead": "^0.6.1",
    "jsdom": "^14.0.0",
    "jsdom-global": "^3.0.2",
    "lerna": "^3.22.1",
    "lint-staged": "^8.2.1",
    "prettier": "^2.0.2",
    "spawn-command": "0.0.2-1",
    "ts-jest": "^26.4.0",
    "tslib": "^2.1.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/*/{src,test}/**/*.{ts,tsx,js,json}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  }
}
